<Window x:Class="SmartHome.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки системы" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SettingsHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="SettingItemStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingGroupStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Настройки системы Умный Дом" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Foreground="#333333"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Содержание настроек -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Настройки внешнего вида -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="Внешний вид" Style="{StaticResource SettingsHeaderStyle}"/>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Тема интерфейса" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="ThemeComboBox" 
                                      SelectedIndex="0"
                                      FontSize="12"
                                      Padding="8,5">
                                <ComboBoxItem Content="Светлая тема"/>
                                <ComboBoxItem Content="Темная тема"/>
                                <ComboBoxItem Content="Автоматически"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Размер шрифта" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Slider x:Name="FontSizeSlider" 
                                    Minimum="10" 
                                    Maximum="18" 
                                    Value="12"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"/>
                            <TextBlock x:Name="FontSizeValue" Text="12 pt" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="AnimationsCheckBox" 
                                      Content="Включить анимации интерфейса"
                                      IsChecked="True"
                                      FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Настройки уведомлений -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="Уведомления" Style="{StaticResource SettingsHeaderStyle}"/>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="EmailNotificationsCheckBox" 
                                      Content="Email уведомления"
                                      IsChecked="True"
                                      FontSize="12"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="PushNotificationsCheckBox" 
                                      Content="Push уведомления"
                                      IsChecked="True"
                                      FontSize="12"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="SoundNotificationsCheckBox" 
                                      Content="Звуковые уведомления"
                                      IsChecked="True"
                                      FontSize="12"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Типы уведомлений:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <CheckBox x:Name="SecurityNotificationsCheckBox" 
                                      Content="События безопасности"
                                      IsChecked="True"
                                      FontSize="12"/>
                            <CheckBox x:Name="ClimateNotificationsCheckBox" 
                                      Content="Изменения климата"
                                      IsChecked="True"
                                      FontSize="12"/>
                            <CheckBox x:Name="EnergyNotificationsCheckBox" 
                                      Content="Потребление энергии"
                                      IsChecked="False"
                                      FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Настройки автоматизации -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="Автоматизация" Style="{StaticResource SettingsHeaderStyle}"/>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Температура комфорта" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дневная:" VerticalAlignment="Center" Width="80"/>
                                <TextBox x:Name="DayTemperatureTextBox" 
                                         Text="22" 
                                         Width="50" 
                                         Margin="5,0,20,0"
                                         TextAlignment="Center"
                                         PreviewTextInput="TemperatureTextBox_PreviewTextInput"/>
                                <TextBlock Text="°C" VerticalAlignment="Center"/>

                                <TextBlock Text="Ночная:" VerticalAlignment="Center" Width="80" Margin="20,0,0,0"/>
                                <TextBox x:Name="NightTemperatureTextBox" 
                                         Text="18" 
                                         Width="50" 
                                         Margin="5,0,20,0"
                                         TextAlignment="Center"
                                         PreviewTextInput="TemperatureTextBox_PreviewTextInput"/>
                                <TextBlock Text="°C" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Автоматическое управление светом" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Включение в:" VerticalAlignment="Center" Width="100"/>
                                <TextBox x:Name="LightsOnTimeTextBox" 
                                         Text="18:00" 
                                         Width="60" 
                                         Margin="5,0,20,0"
                                         TextAlignment="Center"
                                         PreviewTextInput="TimeTextBox_PreviewTextInput"/>

                                <TextBlock Text="Выключение в:" VerticalAlignment="Center" Width="100" Margin="20,0,0,0"/>
                                <TextBox x:Name="LightsOffTimeTextBox" 
                                         Text="23:00" 
                                         Width="60" 
                                         Margin="5,0,0,0"
                                         TextAlignment="Center"
                                         PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="AutoAwayModeCheckBox" 
                                      Content="Режим 'Нет дома' (автоматическое включение сигнализации)"
                                      IsChecked="False"
                                      FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Настройки системы -->
                <Border Style="{StaticResource SettingGroupStyle}">
                    <StackPanel>
                        <TextBlock Text="Системные настройки" Style="{StaticResource SettingsHeaderStyle}"/>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Интервал обновления данных" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="UpdateIntervalComboBox" 
                                      SelectedIndex="1"
                                      FontSize="12"
                                      Padding="8,5">
                                <ComboBoxItem Content="5 секунд"/>
                                <ComboBoxItem Content="10 секунд"/>
                                <ComboBoxItem Content="30 секунд"/>
                                <ComboBoxItem Content="1 минута"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <TextBlock Text="Язык интерфейса" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="LanguageComboBox" 
                                      SelectedIndex="0"
                                      FontSize="12"
                                      Padding="8,5">
                                <ComboBoxItem Content="Русский"/>
                                <ComboBoxItem Content="English"/>
                                <ComboBoxItem Content="Deutsch"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="AutoUpdateCheckBox" 
                                      Content="Автоматическое обновление системы"
                                      IsChecked="True"
                                      FontSize="12"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingItemStyle}">
                            <CheckBox x:Name="DataCollectionCheckBox" 
                                      Content="Отправлять анонимные данные для улучшения системы"
                                      IsChecked="False"
                                      FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#4CAF50"
                    Width="100" 
                    Height="35"
                    Click="SaveButton_Click"
                    Margin="0,0,10,0"/>

            <Button Content="Сбросить" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#FF9800"
                    Width="100" 
                    Height="35"
                    Click="ResetButton_Click"
                    Margin="0,0,10,0"/>

            <Button Content="Отмена" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#F44336"
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>