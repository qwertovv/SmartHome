<Window x:Class="SmartHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Умный Дом" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Стиль для кнопок с закругленными углами -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D2"/>
                                <Setter TargetName="Border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#BDBDBD"/>
                                <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек устройств -->
        <Style x:Key="DeviceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Стиль для подзаголовков -->
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Панель управления Умным Домом" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center"/>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Секция освещения -->
                <Border Style="{StaticResource DeviceCardStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Освещение" Style="{StaticResource SubHeaderTextStyle}"/>
                        <WrapPanel>
                            <Button Content="Гостиная" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="120"/>
                            <Button Content="Кухня" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="120"/>
                            <Button Content="Спальня" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="120"/>
                            <Button Content="Все выключить" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#FF9800" Width="120"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Секция климата -->
                <Border Style="{StaticResource DeviceCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🌡️ Климат-контроль" Style="{StaticResource SubHeaderTextStyle}"/>
                        <WrapPanel>
                            <Button Content="Температура +" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="140"/>
                            <Button Content="Температура -" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="140"/>
                            <Button Content="Включить кондиционер" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#4CAF50" Width="160"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Секция безопасности -->
                <Border Style="{StaticResource DeviceCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔒 Безопасность" Style="{StaticResource SubHeaderTextStyle}"/>
                        <WrapPanel>
                            <Button Content="Включить сигнализацию" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#F44336" Width="160"/>
                            <Button Content="Камеры наблюдения" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="160"/>
                            <Button Content="Статус дверей" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="120"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Секция мультимедиа -->
                <Border Style="{StaticResource DeviceCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🎵 Мультимедиа" Style="{StaticResource SubHeaderTextStyle}"/>
                        <WrapPanel>
                            <Button Content="Включить музыку" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="140"/>
                            <Button Content="Телевизор" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" Width="120"/>
                            <Button Content="Кино режим" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#9C27B0" Width="120"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Секция сценариев -->
                <Border Style="{StaticResource DeviceCardStyle}">
                    <StackPanel>
                        <TextBlock Text="⚡ Сценарии" Style="{StaticResource SubHeaderTextStyle}"/>
                        <WrapPanel>
                            <Button Content="Утро" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#FFC107" Width="100"/>
                            <Button Content="Вечер" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#FF9800" Width="100"/>
                            <Button Content="Ночь" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#673AB7" Width="100"/>
                            <Button Content="Гости" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,10,10" 
                                    Background="#E91E63" Width="100"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="⚙️ Настройки" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,15,0" 
                        Background="#607D8B" Width="130"/>
                <Button Content="📊 Статистика" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,15,0" 
                        Background="#009688" Width="130"/>
                <Button Content="❓ Помощь" Style="{StaticResource RoundedButtonStyle}" Margin="0,0,15,0" 
                        Background="#795548" Width="120"/>
                <Button Content="🚪 Выход" Style="{StaticResource RoundedButtonStyle}" 
                        Background="#F44336" Width="120"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>